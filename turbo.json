{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "clean": {
      "cache": false
    },
    "clean-modules": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {},
    "lint": {},
    "pkg": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {},
    "typecheck": {}
  }
}
