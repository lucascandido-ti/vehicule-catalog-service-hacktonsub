{
  "root": true,
  "env": {
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-namespace":"off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "camelcase": [
      "error",
      {
        "properties": "never",
        "allow": [
          "pubsub",
        ]
      }
    ],
    "sort-imports": [
      "error",
      {
        "allowSeparatedGroups": true
      }
    ]
  },
  "ignorePatterns": [
    "*.js"
  ]
}
